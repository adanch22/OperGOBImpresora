<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connectivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Estatus: No conectado"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:background="@color/colorRed"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:layout_below="@id/statusText"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bluetoothRadio"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Conexi칩n: Bluetooth (R)" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/macAddressText"
                android:layout_width="fill_parent"
                android:textSize="20.0sp"
                android:layout_height="wrap_content"
                android:text="Direcci칩n MAC:"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/macInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textNoSuggestions|text"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:text="Configuraci칩n de Usuario"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>

        <RadioGroup
            android:id="@+id/radioGroupTipoApp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusText"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ComercioRadio"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Inspector de Comercio" />

            <RadioButton
                android:id="@+id/TransitoRadio"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Agente de Tr치nsito" />

        </RadioGroup>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:text="Clave de Usuario"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Usuario"
            />


        <Button
            android:id="@+id/testButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Imprimir"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>