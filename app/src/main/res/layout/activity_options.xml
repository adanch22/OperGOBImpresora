            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccione para editar">

                </TextView>
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup2"
                    android:layout_below="@id/statusText"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/Disabled"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:text="Bloqueado" />
                    <RadioButton
                        android:id="@+id/Enabled"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:text="Editar confgiuración" />

                </RadioGroup>

            </LinearLayout>
            <TextView
                android:id="@+id/macAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="Dirección MAC (Bluetooth)*" />

            <EditText
                android:id="@+id/InMac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_marginRight="50dp"
                android:inputType="textNoSuggestions|text" />

            <TextView
                android:id="@+id/UsuarioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="Clave de Usuario*" />

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:tooltipText="Clave de Usuario"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InUsuario"
                android:lines="1"
                />

