            <TextView
                android:id="@+id/UrlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:enabled="true"
                android:textColor="@color/colorBlack"
                android:text="URL Base*" />

            <EditText
                android:id="@+id/InURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:hint="http://201.134.12.55/TenaSD/"
                android:inputType="text"
                android:lines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15dp"
                android:textStyle="normal"
                android:tooltipText="Escriba la URL donde está instalado el Módulo*" />

            <Button
                android:id="@+id/InGuardar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnanimation"
                android:paddingStart="10dip"
                android:paddingLeft="10dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:selectAllOnFocus="false"
                android:shadowColor="#979797"
                android:shadowRadius="5"
                android:text="Guardar"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

