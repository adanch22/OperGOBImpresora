<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Configuración"/>

            <TextView
                android:id="@+id/macAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="Dirección MAC (Bluetooth)*" />

            <EditText
                android:id="@+id/InMac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_marginRight="50dp"
                android:inputType="textNoSuggestions|text" />

            <TextView
                android:id="@+id/UsuarioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="Clave de Usuario*" />

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:tooltipText="Clave de Usuario"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InUsuario"
                android:lines="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="Aplicación Móvil OperGOB*"/>

            <RadioGroup
                android:id="@+id/inradioGroupTipoApp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusText"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/inComercioRadio"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:text="CUCMóvil" />
                <RadioButton
                    android:id="@+id/inTransitoRadio"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:text="MTMóvil" />

            </RadioGroup>

            <TextView
                android:id="@+id/UrlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:text="URL Base*" />

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:tooltipText="URL Base*"
                android:textColor="@color/cardview_dark_background"
                android:text="http://201.131.20.44/Prueba_Reynosa/"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InURL"
                android:lines="1"
                />
            <Button
                android:id="@+id/InGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:text="Guardar"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>